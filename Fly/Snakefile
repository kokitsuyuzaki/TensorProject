import pandas as pd
from snakemake.utils import min_version

#
# Setting
#
min_version("6.5.3")
container: 'docker://koki/tensor-projects-fly:20230501'

rule all:
    input:
        'plot/data.png',
        'plot/pca_group.png',
        'plot/pca_pi.png',
        'plot/pca_group_deg.png',
        'plot/pca_pi_deg.png',
