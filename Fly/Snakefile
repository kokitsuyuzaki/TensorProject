        'plot/venndiagram_3.png',
        'plot/venndiagram_4.png'

##############################
######## Preprocessing #######
##############################
rule preprocess:
    input:
        'data/rpkm.tsv',
        'data/label.tsv'
    output:
        'data/objects.RData'
    resources:
        mem_gb=50
    benchmark:
        'benchmarks/preprocess.txt'
    log:
        'logs/preprocess.log'
    shell:
        'src/preprocess.sh {input} {output} >& {log}'

##############################
########## Analysis ##########
